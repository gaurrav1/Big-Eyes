{
  "manifest_version": 3,
  "name": "Reading time",
  "version": "1.0",
  "description": "Add the reading time to Chrome Extension documentation articles",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": [
        "src/content/index.jsx",
        "src/content/scripts/main.js"
      ],
      "matches": [
        "https://*.hiring.amazon.ca/**"
      ]
    }
  ],
  "background": {
    "service_worker": "src/service-worker/main.js",
    "type": "module"
  },
  "permissions": [
    "storage", "geolocation", "scripting", "tabs"
  ],
  "host_permissions": ["https://*.hiring.amazon.ca/**"],
  "web_accessible_resources": [
    {
      "resources": [
        "images/*.png",
        "content/*.css"
      ],
      "matches": []
    }
  ]
}