{
  "manifest_version": 3,
  "name": "Big Eyes",
  "version": "0.3.5",
  "description": "Search for jobs on Amazon Canada With Big Eyes",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": [
        "src/content/index.jsx",
        "src/content/scripts/main.js",
        "src/content/scripts/consent-page-handler.js"
      ],
      "matches": ["https://*.hiring.amazon.com/**"]
    }
  ],
  "background": {
    "service_worker": "src/service-worker/main.js",
    "type": "module"
  },
  "permissions": ["storage", "geolocation", "scripting", "tabs", "offscreen"],
  "host_permissions": ["https://*.hiring.amazon.com/**"],
  "web_accessible_resources": [
    {
      "resources": ["images/*.png", "content/*.css", "sounds/*.mp3", "*.html"],
      "matches": ["https://*.hiring.amazon.com/*"]
    }
  ]
}
