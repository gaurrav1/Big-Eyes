{
  // Zed settings with auto-save, cool theme, and optimized configuration
  // For information on how to configure Zed, see the Zed
  // documentation: https://zed.dev/docs/configuring-zed

  // Agent/AI Configuration
  "agent": {
    "model_parameters": [],
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "version": "2"
  },

  // Features
  "features": {
    "edit_prediction_provider": "zed",
    "copilot": true
  },

  // Auto-save configuration
  "autosave": "on_focus_change",
  "auto_save_delay": 1000,
  "save_on_focus_lost": true,

  // Editor settings
  "vim_mode": false,
  "buffer_font_size": 16,
  "ui_font_size": 16,
  "buffer_font_family": "JetBrains Mono",
  "ui_font_family": "Inter",
  "cursor_blink": false,
  "show_whitespaces": "selection",
  "show_wrap_guides": true,
  "wrap_guides": [80, 120],
  "soft_wrap": "editor_width",
  "tab_size": 2,
  "hard_tabs": false,
  "preferred_line_length": 100,
  "format_on_save": "on",
  "ensure_final_newline_on_save": true,
  "remove_trailing_whitespace_on_save": true,

  // Theme configuration - Cool themes
  "theme": {
    "mode": "system",
    "light": "Gruvbox Light",
    "dark": "Tokyo Night Storm"
  },

  // UI settings
  "ui_density": "comfortable",
  "scrollbar": {
    "show": "auto",
    "git_diff": true,
    "selections": true,
    "symbols_selections": true,
    "diagnostics": true
  },
  "vertical_scroll_margin": 3,
  "scroll_beyond_last_line": "one_page",
  "relative_line_numbers": false,
  "gutter": {
    "line_numbers": true,
    "code_actions": true,
    "runnables": true,
    "folds": true
  },

  // File management
  "auto_reveal_entries": true,
  "confirm_quit": true,
  "restore_on_startup": "last_workspace",
  "when_closing_with_no_tabs": "platform_default",

  // Search settings
  "search": {
    "whole_word": false,
    "case_sensitive": false,
    "include_ignored": false,
    "regex": false
  },

  // Project panel
  "project_panel": {
    "button": true,
    "default_width": 280,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true
  },

  // Outline panel
  "outline_panel": {
    "button": true,
    "default_width": 300,
    "dock": "right",
    "file_icons": true,
    "folder_icons": true,
    "indent_size": 20
  },

  // Collaboration panel
  "collaboration_panel": {
    "button": true,
    "dock": "left"
  },

  // Chat panel
  "chat_panel": {
    "button": true,
    "dock": "right"
  },

  // Notification panel
  "notification_panel": {
    "button": true,
    "dock": "right"
  },

  // Terminal settings
  "terminal": {
    "alternate_scroll": "off",
    "blinking": "terminal_controlled",
    "copy_on_select": false,
    "dock": "bottom",
    "detect_venv": {
      "on": {
        "activate_script": "default"
      }
    },
    "env": {},
    "font_family": "JetBrains Mono",
    "font_size": 14,
    "line_height": "comfortable",
    "option_as_meta": false,
    "button": true,
    "shell": "system",
    "toolbar": {
      "title": true
    },
    "working_directory": "current_project_directory"
  },

  // Assistant panel
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "dock": "right",
    "default_width": 400,
    "button": true
  },

  // Language-specific settings
  "languages": {
    "TypeScript": {
      "format_on_save": "on",
      "formatter": "prettier",
      "code_actions_on_format": {
        "source.organizeImports": true,
        "source.removeUnusedImports": true
      }
    },
    "JavaScript": {
      "format_on_save": "on",
      "formatter": "prettier",
      "code_actions_on_format": {
        "source.organizeImports": true,
        "source.removeUnusedImports": true
      }
    },
    "JSON": {
      "format_on_save": "on",
      "formatter": "prettier"
    },
    "Rust": {
      "format_on_save": "on",
      "formatter": "rustfmt"
    },
    "Python": {
      "format_on_save": "on",
      "formatter": "ruff"
    }
  },

  // LSP settings
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "checkOnSave": {
          "command": "clippy"
        }
      }
    }
  },

  // Git settings
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true,
      "delay_ms": 600
    }
  },

  // Productivity features
  "show_completions_on_input": true,
  "show_completion_documentation": true,
  "completion_documentation_secondary_query_debounce": 300,
  "use_autoclose": true,
  "always_treat_brackets_as_autoclosed": false,
  "auto_update": true,
  "calls": {
    "mute_on_join": false,
    "share_on_join": false
  },

  // Performance settings
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/node_modules",
    "**/target",
    "**/build",
    "**/dist",
    "**/*.log"
  ],

  // Experimental features
  "experimental.theme_overrides": {
    "players": [
      {
        "cursor": "#ff0000",
        "background": "#ff000020",
        "selection": "#ff000030"
      }
    ]
  }
}
